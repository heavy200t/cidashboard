  <id>package</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>service.js</source>
    </file>
    <file>
      <source>mail.pug</source>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>config</directory>
      <outputDirectory>config</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>routes</directory>
      <outputDirectory>routes</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>utils</directory>
      <outputDirectory>utils</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>controllers</directory>
      <outputDirectory>controllers</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>database</directory>
      <outputDirectory>database</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>graphql</directory>
      <outputDirectory>graphql</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>node_modules</directory>
      <outputDirectory>node_modules</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
